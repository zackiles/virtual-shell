{
  "files": {
    "ignore": ["**/node_modules", "CHANGELOG.md", "dist", "coverage", "*.log", ".git", ".vscode"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noVar": "error",
        "useConst": "error",
        "useTemplate": "error"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noAssignInExpressions": "error",
        "noShadowRestrictedNames": "error",
        "noConsoleLog": "warn",
        "noDebugger": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
